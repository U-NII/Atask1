<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>nd errors.
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_area :body %>
    <div class:"actions">
      <%= f.submit %>
    </div>
<% end %>
